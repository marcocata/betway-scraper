#!/usr/bin/env groovy
pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    stages {
        stage ('Initialize') {
            steps {
                sh 'printenv'
            }
        }
        stage('Package') {
            steps {
                sh "${tool name: 'sbt', type: 'org.jvnet.hudson.plugins.SbtPluginBuilder$SbtInstallation'}/bin/sbt package"
            }
        }
        stage('Deploy') {
            steps {
                sh 'cp target/scala-2.12/betway-scraper.jar /home/ec2-user/betway-scraper/'
            }
        }
    }
}
#!/usr/bin/env groovy
pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    tools {
        maven 'Maven3'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh 'printenv'
            }
        }
        stage('Build') {
            steps {
                sh "mvn clean package -U -P${BRANCH_NAME}"
            }
        }
        stage('Deploy') {
            steps {
                sh "bash scripts/deploy.sh ${BRANCH_NAME}"
            }
        }
    }
}